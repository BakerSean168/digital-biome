<style>
  .resume-body {
    margin: 0;
    background: linear-gradient(180deg, #f0f2f5 0%, #e8eaed 100%);
    min-height: 100vh;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  :global(html.dark) .resume-body {
    background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  }

  .resume-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  :global(html.dark) .resume-nav {
    background: rgba(26, 26, 46, 0.9);
  }

  .nav-left, .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .back-link {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #333;
  }

  :global(html.dark) .back-link {
    color: #aaa;
  }

  :global(html.dark) .back-link:hover {
    color: #fff;
  }

  .print-btn {
    background: #0066cc;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: background 0.2s;
  }

  .print-btn:hover {
    background: #0052a3;
  }

  .resume-main {
    padding: 2rem;
  }

  .resume-container {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
    padding: 3rem;
  }

  :global(html.dark) .resume-container {
    background: #1e1e3f;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
  }

  /* ç®€å†å†…å®¹æ ·å¼ */
  .resume-container :global(h1) {
    font-size: 2.5rem;
    margin: 0 0 0.25rem 0;
    color: #1a1a1a;
  }

  :global(html.dark) .resume-container :global(h1) {
    color: #fff;
  }

  .resume-container :global(h2) {
    font-size: 1.25rem;
    color: #0066cc;
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #0066cc;
  }

  .resume-container :global(h3) {
    font-size: 1.1rem;
    margin: 1rem 0 0.25rem 0;
  }

  .resume-container :global(p) {
    color: #555;
    line-height: 1.7;
  }

  :global(html.dark) .resume-container :global(p) {
    color: #bbb;
  }

  .resume-container :global(ul) {
    padding-left: 1.5rem;
  }

  .resume-container :global(li) {
    margin: 0.5rem 0;
    color: #555;
  }

  :global(html.dark) .resume-container :global(li) {
    color: #bbb;
  }
</style>
