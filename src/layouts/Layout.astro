---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import WikiSidebar from '../components/wiki/WikiSidebar.astro';
import TableOfContents from '../components/wiki/TableOfContents.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  variant?: 'default' | 'wiki' | 'dashboard';
  /** Wiki variant: headings for right-side TOC */
  headings?: { depth: number; slug: string; text: string }[];
  /** Wiki variant: current note slug for sidebar active state */
  currentSlug?: string;
  /** Wiki variant: show left sidebar */
  showSidebar?: boolean;
  /** Wiki variant: show right TOC */
  showToc?: boolean;
}

const {
  title,
  description = '个人知识生态网站',
  image = '/og-image.png',
  type = 'website',
  variant = 'default',
  headings = [],
  currentSlug = '',
  showSidebar = true,
  showToc = true,
} = Astro.props;

const hasToc = showToc && headings.length > 0;

const siteUrl = 'https://digital-biome.netlify.app';
const fullUrl = siteUrl + Astro.url.pathname;
const fullTitle = title === 'Digital Biome' ? title : `${title} | Digital Biome`;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Digital Biome" />

    <title>{fullTitle}</title>

    <link rel="canonical" href={fullUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="theme-color" content="#0066cc" />
    <meta name="robots" content="index, follow" />

    <meta property="og:type" content={type} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={siteUrl + image} />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:site_name" content="Digital Biome" />
    <meta property="og:locale" content="zh_CN" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={siteUrl + image} />
  </head>
  <body class:list={[{ 'dashboard-body': variant === 'dashboard' }]}>
    <Header />

    {/* ===== Default variant ===== */}
    {variant === 'default' && (
      <main class="main-default">
        <slot />
      </main>
    )}

    {/* ===== Wiki variant: 3-column grid ===== */}
    {variant === 'wiki' && (
      <div
        class:list={[
          'wiki-layout',
          { 'wiki-layout--no-sidebar': !showSidebar },
          { 'wiki-layout--no-toc': !hasToc },
        ]}
      >
        {showSidebar && (
          <aside class="wiki-sidebar">
            <div class="sidebar-header">
              <a href="/notes" class="sidebar-title">笔记</a>
            </div>
            <WikiSidebar currentSlug={currentSlug} />
          </aside>
        )}

        <main class="wiki-content">
          <article class="wiki-article">
            <div class="article-body">
              <slot />
            </div>
          </article>
        </main>

        {hasToc && (
          <aside class="wiki-toc">
            <TableOfContents headings={headings} />
          </aside>
        )}
      </div>
    )}

    {/* ===== Dashboard variant: centered gradient ===== */}
    {variant === 'dashboard' && (
      <main class="dashboard-main">
        <slot />
      </main>
    )}

    {variant !== 'dashboard' && <Footer />}

    {variant === 'dashboard' && (
      <footer class="dashboard-footer">
        <span class="time" id="current-time"></span>
      </footer>
    )}
  </body>
</html>

{/* Dashboard clock script */}
{variant === 'dashboard' && (
  <script>
    function updateTime() {
      const el = document.getElementById('current-time');
      if (el) {
        const now = new Date();
        el.textContent = now.toLocaleTimeString('zh-CN', {
          hour: '2-digit',
          minute: '2-digit',
        });
      }
    }
    updateTime();
    setInterval(updateTime, 1000);
  </script>
)}

<style is:global>
  html {
    color-scheme: light dark;
  }
</style>

<style>
  /* ===== Default variant ===== */
  .main-default {
    min-height: calc(100vh - 200px);
  }

  /* ===== Wiki variant ===== */
  .wiki-layout {
    display: grid;
    grid-template-columns: 260px 1fr 200px;
    min-height: calc(100vh - 120px);
    max-width: 1400px;
    margin: 0 auto;
  }

  .wiki-layout--no-sidebar {
    grid-template-columns: 1fr 200px;
  }

  .wiki-layout--no-toc {
    grid-template-columns: 260px 1fr;
  }

  .wiki-layout--no-sidebar.wiki-layout--no-toc {
    grid-template-columns: 1fr;
  }

  @media (max-width: 1200px) {
    .wiki-layout {
      grid-template-columns: 240px 1fr;
    }
    .wiki-layout--no-sidebar {
      grid-template-columns: 1fr;
    }
    .wiki-toc {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .wiki-layout {
      grid-template-columns: 1fr;
    }
    .wiki-sidebar {
      display: none;
    }
  }

  .wiki-sidebar {
    border-right: 1px solid var(--color-border, #e5e5e5);
    padding: 1.5rem 1rem;
    position: sticky;
    top: 60px;
    height: calc(100vh - 60px);
    overflow-y: auto;
  }

  .sidebar-header {
    margin-bottom: 1.5rem;
  }

  .sidebar-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: inherit;
    text-decoration: none;
  }

  .wiki-content {
    padding: 2rem 3rem;
    max-width: 800px;
  }

  .wiki-article {
    line-height: 1.8;
  }

  .article-body {
    font-size: 1rem;
  }

  .article-body :global(h2) {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border, #e5e5e5);
  }

  .article-body :global(pre) {
    background: var(--color-code-bg, #f4f4f4);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
  }

  .article-body :global(code) {
    font-family: 'Fira Code', 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .article-body :global(a) {
    color: var(--color-primary, #0066cc);
    text-decoration: none;
  }

  .article-body :global(a:hover) {
    text-decoration: underline;
  }

  .wiki-toc {
    padding: 1.5rem 1rem;
    position: sticky;
    top: 60px;
    height: fit-content;
    max-height: calc(100vh - 60px);
    overflow-y: auto;
  }

  /* ===== Dashboard variant ===== */
  .dashboard-body {
    margin: 0;
    min-height: 100vh;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    color: #e8e8e8;
  }

  :global(html.dark) .dashboard-body {
    background: linear-gradient(135deg, #0d0d0d 0%, #1a1a1a 50%, #2d2d2d 100%);
  }

  .dashboard-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    min-height: calc(100vh - 160px);
  }

  .dashboard-footer {
    text-align: center;
    padding: 1rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .time {
    font-size: 0.85rem;
    font-variant-numeric: tabular-nums;
  }
</style>
