---
import { getPublicNotes } from '../../utils/notes';

interface Props {
  limit?: number;
}

const { limit = 5 } = Astro.props;

const allNotes = await getPublicNotes();

const notesWithTime = allNotes.map(note => {
  const body = note.body || '';
  const modifiedMatch = body.match(/<!-- last-modified: (\d+) -->/);
  const lastModified = modifiedMatch ? new Date(parseInt(modifiedMatch[1]) * 1000) : 
    note.data.updated || note.data.created || new Date(0);
  
  return {
    note,
    lastModified
  };
});

const recentNotes = notesWithTime
  .sort((a, b) => b.lastModified.getTime() - a.lastModified.getTime())
  .slice(0, limit)
  .map(({ note, lastModified }) => ({
    title: note.data.title,
    slug: note.slug,
    description: note.data.description,
    category: note.data.category,
    lastModified
  }));
---

<section class="recent-notes">
  <h2 class="section-title">üìù ÊúÄËøëÊõ¥Êñ∞</h2>
  
  {recentNotes.length === 0 ? (
    <p class="empty">ÊöÇÊó†Á¨îËÆ∞</p>
  ) : (
    <div class="notes-list">
      {recentNotes.map((note) => (
        <a href={`/wiki/${note.slug}`} class="note-card">
          <div class="note-header">
            <h3 class="note-title">{note.title}</h3>
            <span class="note-date">
              {note.lastModified.toLocaleDateString('zh-CN')}
            </span>
          </div>
          {note.description && (
            <p class="note-desc">{note.description}</p>
          )}
          {note.category && (
            <span class="note-category">{note.category}</span>
          )}
        </a>
      ))}
    </div>
  )}
</section>

<style>
  .recent-notes {
    margin-top: 2rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary, #333);
  }

  .empty {
    color: var(--text-secondary, #888);
    font-size: 0.9rem;
  }

  .notes-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .note-card {
    display: block;
    padding: 1rem 1.25rem;
    background: var(--card-bg, #fff);
    border: 1px solid var(--border-color, #e5e5e5);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .note-card:hover {
    border-color: var(--accent-color, #0066cc);
    box-shadow: 0 2px 8px rgba(0, 102, 204, 0.1);
  }

  .note-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .note-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--accent-color, #0066cc);
  }

  .note-date {
    font-size: 0.75rem;
    color: var(--text-secondary, #888);
    white-space: nowrap;
  }

  .note-desc {
    margin: 0.5rem 0 0 0;
    font-size: 0.85rem;
    color: var(--text-secondary, #666);
    line-height: 1.5;
  }

  .note-category {
    display: inline-block;
    margin-top: 0.5rem;
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--tag-bg, #f0f0f0);
    border-radius: 4px;
    color: var(--text-secondary, #666);
  }

  :global(html.dark) .note-card {
    --card-bg: #1e1e3f;
    --border-color: #2d2d4a;
    --tag-bg: #2d2d4a;
  }
</style>
