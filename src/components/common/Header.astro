---
import ThemeIcon from './ThemeIcon.astro';
import SiteSearch from './SiteSearch.astro';
import { SITE_NAME } from '../../constants';
import { Search } from '@lucide/astro';
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto max-w-7xl px-6 h-16 flex items-center justify-between">
    <!-- Site title / home link -->
    <a href="/" class="text-xl font-semibold tracking-tight text-foreground hover:text-primary transition-colors">
      {SITE_NAME}
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      <nav class="flex items-center gap-6 text-sm font-medium text-muted-foreground">
        <a href="/about" class="hover:text-foreground transition-colors">About</a>
        <a href="/notes" class="hover:text-foreground transition-colors">Notes</a>
        <a href="/about/resume" class="hover:text-foreground transition-colors">Resume</a>
      </nav>
      <div class="h-4 w-px bg-border"></div>
      <div class="flex items-center gap-2">
        <button class="search-trigger flex items-center justify-center w-9 h-9 rounded-md text-muted-foreground hover:bg-card-hover hover:text-foreground transition-colors" aria-label="Search site" aria-haspopup="dialog">
          <Search size={20} />
        </button>
        <ThemeIcon />
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="flex items-center gap-2 md:hidden">
      <button class="search-trigger flex items-center justify-center w-9 h-9 rounded-md text-muted-foreground hover:bg-card-hover hover:text-foreground transition-colors" aria-label="Search site" aria-haspopup="dialog">
        <Search size={20} />
      </button>
      <button
        id="hamburger-btn"
        class="group relative flex h-9 w-9 flex-col items-center justify-center gap-[5px] rounded-md transition-colors hover:bg-card-hover"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="hamburger-menu"
      >
        <span class="h-[2px] w-5 rounded-full bg-foreground transition-all duration-200 group-aria-[expanded=true]:translate-y-[7px] group-aria-[expanded=true]:rotate-45"></span>
        <span class="h-[2px] w-5 rounded-full bg-foreground transition-all duration-200 group-aria-[expanded=true]:opacity-0"></span>
        <span class="h-[2px] w-5 rounded-full bg-foreground transition-all duration-200 group-aria-[expanded=true]:-translate-y-[7px] group-aria-[expanded=true]:-rotate-45"></span>
      </button>
    </div>
  </div>

  <!-- Slide-down menu panel (Mobile) -->
  <div 
    id="hamburger-menu" 
    class="absolute left-0 right-0 top-full hidden origin-top border-b border-border bg-background px-6 pb-6 pt-4 shadow-lg transition-all duration-200 data-[state=open]:block data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 md:hidden"
  >
    <div class="mx-auto max-w-7xl">
      <nav class="flex flex-col gap-1 mb-4">
        <a href="/" class="block rounded-md px-4 py-3 text-base font-medium text-foreground transition-colors hover:bg-card-hover hover:text-primary">导航 (Index)</a>
        <a href="/notes" class="block rounded-md px-4 py-3 text-base font-medium text-foreground transition-colors hover:bg-card-hover hover:text-primary">笔记 (Notes)</a>
        <a href="/about" class="block rounded-md px-4 py-3 text-base font-medium text-foreground transition-colors hover:bg-card-hover hover:text-primary">个人主页 (Profile)</a>
        <a href="/about/resume" class="block rounded-md px-4 py-3 text-base font-medium text-foreground transition-colors hover:bg-card-hover hover:text-primary">简历 (Resume)</a>
      </nav>
      <div class="flex items-center justify-end border-t border-border pt-4">
        <ThemeIcon />
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('hamburger-btn');
  const menu = document.getElementById('hamburger-menu');

  if (btn && menu) {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isExpanded));
      
      if (!isExpanded) {
        menu.classList.remove('hidden');
        requestAnimationFrame(() => {
          menu.setAttribute('data-state', 'open');
        });
      } else {
        menu.setAttribute('data-state', 'closed');
        setTimeout(() => {
          menu.classList.add('hidden');
        }, 200);
      }
    });

    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!menu.classList.contains('hidden') && !menu.contains(target) && !btn.contains(target)) {
        btn.setAttribute('aria-expanded', 'false');
        menu.setAttribute('data-state', 'closed');
        setTimeout(() => {
          menu.classList.add('hidden');
        }, 200);
      }
    });

    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        btn.setAttribute('aria-expanded', 'false');
        menu.setAttribute('data-state', 'closed');
        setTimeout(() => {
          menu.classList.add('hidden');
        }, 200);
      });
    });
  }
</script>

<!-- Global Site Search Modal -->
<SiteSearch />