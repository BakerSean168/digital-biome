---
/**
 * 快捷入口组件
 * 显示常用的站内导航
 */
import { BookOpen, User, FileText } from '@lucide/astro';

interface QuickLink {
  label: string;
  href: string;
  color?: string;
}

const quickLinks: QuickLink[] = [
  { label: '笔记', href: '/notes', color: '#4ade80' },
  { label: '个人主页', href: '/about', color: '#fbbf24' },
  { label: '简历', href: '/about/resume', color: '#a78bfa' },
];

const iconMap = { '笔记': BookOpen, '个人主页': User, '简历': FileText };
---

<div class="quick-links">
  {quickLinks.map((link) => {
    const Icon = iconMap[link.label as keyof typeof iconMap];
    return (
      <a href={link.href} class="quick-link" style={`--accent: ${link.color || '#fff'}`}>
        <span class="quick-icon">
          <Icon size={28} color={link.color} />
        </span>
        <span class="quick-label">{link.label}</span>
      </a>
    );
  })}
</div>

<style>
  .quick-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .quick-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    text-decoration: none;
    color: #fff;
    transition: all 0.2s ease;
    min-width: 80px;
  }

  .quick-link:hover {
    background: rgba(255, 255, 255, 0.12);
    transform: translateY(-3px);
  }

  .quick-link:hover .quick-icon {
    transform: scale(1.1);
  }

  .quick-icon {
    font-size: 1.75rem;
    transition: transform 0.2s ease;
  }

  .quick-label {
    font-size: 0.85rem;
    font-weight: 500;
    opacity: 0.9;
  }
</style>
