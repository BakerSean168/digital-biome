---
/**
 * 快捷入口组件
 * 显示常用的站内导航
 */
import { BookOpen, User, FileText } from '@lucide/astro';

interface QuickLink {
  label: string;
  href: string;
  color?: string;
}

const quickLinks: QuickLink[] = [
  { label: '笔记', href: '/notes', color: '#4ade80' },
  { label: '个人主页', href: '/about', color: '#fbbf24' },
  { label: '简历', href: '/about/resume', color: '#a78bfa' },
];

const iconMap = { '笔记': BookOpen, '个人主页': User, '简历': FileText };
---

<nav aria-label="快捷导航" class="flex flex-wrap justify-center gap-6 my-8">
  {quickLinks.map((link) => {
    const Icon = iconMap[link.label as keyof typeof iconMap];
    return (
      <a 
        href={link.href} 
        class="group flex flex-col items-center gap-2 px-6 py-4 bg-white/5 rounded-xl text-white no-underline transition-all duration-200 hover:bg-white/10 hover:-translate-y-1 min-w-[80px]"
        style={`--accent: ${link.color || '#fff'}`}
      >
        <span class="text-3xl transition-transform duration-200 group-hover:scale-110">
          <Icon size={28} color={link.color} />
        </span>
        <span class="text-sm font-medium opacity-90">{link.label}</span>
      </a>
    );
  })}
</nav>
