---
import { getPublicNotes } from '../../utils/notes';

interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

const allNotes = await getPublicNotes();

const backlinks = allNotes.filter(note => {
  const body = note.body?.toLowerCase() || '';
  const title = note.data.title.toLowerCase();
  const slug = currentSlug.toLowerCase();
  return body.includes(`[[${title}]]`) || 
         body.includes(`[[${slug}]]`) ||
         body.includes(`(${slug})`);
});
---

{backlinks.length > 0 && (
  <aside class="mt-12 pt-6 border-t border-border">
    <h4 class="text-sm font-semibold text-muted-foreground mb-4">反向链接 ({backlinks.length})</h4>
    <ul class="m-0 p-0 list-none space-y-3">
      {backlinks.map((note) => (
        <li>
          <a href={`/notes/${note.id}`} class="text-primary font-medium hover:underline">{note.data.title}</a>
          {note.data.description && (
            <span class="block text-sm text-muted-foreground mt-1">{note.data.description}</span>
          )}
        </li>
      ))}
    </ul>
  </aside>
)}
