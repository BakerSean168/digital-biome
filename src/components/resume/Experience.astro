---
interface Props {
  experience: Array<{
    role: string;
    company: string;
    period: string;
    description?: string;
    highlights?: string[];
  }>;
}

const { experience } = Astro.props;
---

<section class="experience-section">
  <h2 class="section-title">工作经历</h2>
  
  <div class="timeline">
    {experience.map((exp, index) => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="exp-header">
            <h3 class="exp-role">{exp.role}</h3>
            <span class="exp-period">{exp.period}</span>
          </div>
          <p class="exp-company">{exp.company}</p>
          {exp.description && (
            <p class="exp-desc">{exp.description}</p>
          )}
          {exp.highlights && exp.highlights.length > 0 && (
            <ul class="exp-highlights">
              {exp.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          )}
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .experience-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-color, #0066cc);
  }

  .timeline {
    position: relative;
    padding-left: 1.5rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-color, #e5e5e5);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0.25rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--accent-color, #0066cc);
    border: 2px solid #fff;
    transform: translateX(-4px);
  }

  .timeline-content {
    padding-left: 0.5rem;
  }

  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .exp-role {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary, #333);
  }

  .exp-period {
    font-size: 0.85rem;
    color: var(--text-secondary, #888);
    white-space: nowrap;
  }

  .exp-company {
    margin: 0.25rem 0;
    font-size: 0.95rem;
    color: var(--accent-color, #0066cc);
  }

  .exp-desc {
    margin: 0.5rem 0;
    font-size: 0.9rem;
    color: var(--text-secondary, #666);
    line-height: 1.5;
  }

  .exp-highlights {
    margin: 0.5rem 0 0 0;
    padding-left: 1.25rem;
    list-style-type: disc;
  }

  .exp-highlights li {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    color: var(--text-primary, #333);
    line-height: 1.5;
  }

  :global(html.dark) .timeline::before {
    --border-color: #2d2d4a;
  }
</style>
