---
import { getCategories } from '../../utils/notes';

const categories = await getCategories();

interface Props {
  currentTag?: string;
}

const { currentTag } = Astro.props;
---

<div class="tag-filter">
  <span class="filter-label">筛选：</span>
  <div class="tag-list">
    <a 
      href="/wiki" 
      class:list={['tag', { active: !currentTag }]}
    >
      全部
    </a>
    {categories.map((cat) => (
      <a 
        href={`/wiki?tag=${encodeURIComponent(cat.name)}`}
        class:list={['tag', { active: currentTag === cat.name }]}
      >
        {cat.name} <span class="count">({cat.count})</span>
      </a>
    ))}
  </div>
</div>

<style>
  .tag-filter {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .filter-label {
    font-size: 0.85rem;
    color: var(--text-secondary, #888);
    padding-top: 0.35rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.35rem 0.75rem;
    font-size: 0.85rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: var(--text-primary, #fff);
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .tag.active {
    background: var(--accent-color, #0066cc);
    border-color: var(--accent-color, #0066cc);
  }

  .count {
    font-size: 0.75rem;
    opacity: 0.7;
  }
</style>
