</BaseLayout>

<style>
  .resume-container {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-lg);
    background: white;
  }

  .resume-header {
    text-align: center;
    padding-bottom: var(--spacing-2xl);
    border-bottom: 3px solid var(--color-primary);
    margin-bottom: var(--spacing-2xl);
  }

  .resume-header h1 {
    font-size: 2.5rem;
    margin: 0 0 var(--spacing-sm) 0;
  }

  .resume-header p {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    margin: 0 0 var(--spacing-md) 0;
  }

  .contact-info {
    display: flex;
    justify-content: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
    font-size: 0.95rem;
  }

  .resume-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .resume-section {
    display: flex;
    flex-direction: column;
  }

  .resume-section h2 {
    margin: 0 0 var(--spacing-lg) 0;
    padding-bottom: var(--spacing-md);
    border-bottom: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .resume-item {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-lg);
    border-left: 2px solid var(--color-border);
  }

  .item-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--spacing-sm);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .resume-item h3 {
    margin: 0;
    font-size: 1.1rem;
  }

  .date {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .company {
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
  }

  .resume-item ul {
    margin: var(--spacing-md) 0 0 0;
    padding-left: var(--spacing-lg);
  }

  .resume-item li {
    margin-bottom: var(--spacing-sm);
  }

  .meta {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin: var(--spacing-sm) 0;
    font-style: italic;
  }

  .skills-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .skill-row {
    display: flex;
    gap: var(--spacing-lg);
  }

  .skill-row strong {
    min-width: 100px;
    color: var(--color-primary);
  }

  .resume-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .print-btn,
  .back-btn {
    padding: var(--spacing-md) var(--spacing-lg);
    border: none;
    border-radius: var(--border-radius-md);
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s;
    text-decoration: none;
  }

  .print-btn {
    background: var(--color-primary);
    color: white;
  }

  .print-btn:hover {
    background: var(--color-primary-hover);
  }

  .back-btn {
    background: transparent;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .back-btn:hover {
    background: var(--color-primary);
    color: white;
  }

  @media print {
    .resume-container {
      padding: 0;
      max-width: 100%;
    }

    .resume-actions {
      display: none;
    }

    body {
      background: white;
    }
  }

  @media (max-width: 768px) {
    .resume-header h1 {
      font-size: 1.8rem;
    }

    .contact-info {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .resume-actions {
      flex-direction: column;
    }

    .print-btn,
    .back-btn {
      width: 100%;
    }
  }
</style>
