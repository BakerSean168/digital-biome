---
// 简历页面
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_AUTHOR, SITE_NAME, AUTHOR_EMAIL, AUTHOR_PHONE, AUTHOR_LOCATION } from '../../constants';
import { Mail, Phone, MapPin, Printer, ArrowLeft } from '@lucide/astro';
---

<BaseLayout title={`Resume | ${SITE_NAME}`} description="我的专业简历">
  <main class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8 print:max-w-full print:p-0 print:bg-white">
    
    <!-- Header -->
    <div class="text-center pb-8 border-b-2 border-primary mb-8 print:border-black">
      <h1 class="text-4xl font-bold text-foreground mb-2 print:text-black">{SITE_AUTHOR}</h1>
      <p class="text-lg text-muted-foreground mb-4 print:text-gray-700">Web Developer | Passionate Learner</p>
      <div class="flex flex-wrap justify-center gap-6 text-sm text-foreground print:text-black">
        <span class="flex items-center gap-1.5"><Mail size={16} class="text-primary print:text-black"/> {AUTHOR_EMAIL}</span>
        <span class="flex items-center gap-1.5"><Phone size={16} class="text-primary print:text-black"/> {AUTHOR_PHONE}</span>
        <span class="flex items-center gap-1.5"><MapPin size={16} class="text-primary print:text-black"/> {AUTHOR_LOCATION}</span>
      </div>
    </div>

    <div class="flex flex-col gap-10">
      
      <!-- Summary -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-4 print:text-black print:border-black">Professional Summary</h2>
        <p class="text-foreground leading-relaxed print:text-black">
          Experienced web developer with expertise in modern JavaScript frameworks and full-stack development.
          Committed to creating elegant, scalable solutions and continuous learning.
        </p>
      </section>

      <!-- Experience -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-6 print:text-black print:border-black">Experience</h2>
        
        <article class="mb-6 pl-4 border-l-2 border-border print:border-gray-300">
          <div class="flex flex-wrap justify-between items-baseline gap-4 mb-2">
            <h3 class="text-lg font-bold text-foreground print:text-black">Senior Developer</h3>
            <span class="text-sm text-muted-foreground print:text-gray-600">2024 - Present</span>
          </div>
          <p class="font-semibold text-primary mb-2 print:text-black">Company Name</p>
          <ul class="list-disc list-inside pl-4 text-foreground print:text-black space-y-1">
            <li>Led development of key features</li>
            <li>Mentored junior developers</li>
            <li>Improved performance by 40%</li>
          </ul>
        </article>

        <article class="mb-6 pl-4 border-l-2 border-border print:border-gray-300">
          <div class="flex flex-wrap justify-between items-baseline gap-4 mb-2">
            <h3 class="text-lg font-bold text-foreground print:text-black">Full Stack Developer</h3>
            <span class="text-sm text-muted-foreground print:text-gray-600">2022 - 2024</span>
          </div>
          <p class="font-semibold text-primary mb-2 print:text-black">Previous Company</p>
          <ul class="list-disc list-inside pl-4 text-foreground print:text-black space-y-1">
            <li>Developed web applications using React and Node.js</li>
            <li>Managed database design and optimization</li>
            <li>Collaborated with design and product teams</li>
          </ul>
        </article>
      </section>

      <!-- Education -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-6 print:text-black print:border-black">Education</h2>
        
        <article class="mb-6 pl-4 border-l-2 border-border print:border-gray-300">
          <div class="flex flex-wrap justify-between items-baseline gap-4 mb-2">
            <h3 class="text-lg font-bold text-foreground print:text-black">Bachelor of Science</h3>
            <span class="text-sm text-muted-foreground print:text-gray-600">2018 - 2022</span>
          </div>
          <p class="font-semibold text-primary mb-1 print:text-black">University Name</p>
          <p class="text-foreground print:text-black">Major: Computer Science</p>
        </article>
      </section>

      <!-- Skills -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-6 print:text-black print:border-black">Skills</h2>
        
        <div class="flex flex-col gap-3">
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 text-foreground print:text-black">
            <strong class="min-w-[120px] text-primary print:text-black">Languages:</strong>
            <span>JavaScript, TypeScript, Python, SQL</span>
          </div>
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 text-foreground print:text-black">
            <strong class="min-w-[120px] text-primary print:text-black">Frontend:</strong>
            <span>React, Vue.js, HTML5, CSS3, Tailwind</span>
          </div>
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 text-foreground print:text-black">
            <strong class="min-w-[120px] text-primary print:text-black">Backend:</strong>
            <span>Node.js, Express, PostgreSQL, MongoDB</span>
          </div>
          <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 text-foreground print:text-black">
            <strong class="min-w-[120px] text-primary print:text-black">Tools:</strong>
            <span>Git, Docker, CI/CD, AWS, VS Code</span>
          </div>
        </div>
      </section>

      <!-- Projects -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-6 print:text-black print:border-black">Projects</h2>
        
        <article class="mb-6 pl-4 border-l-2 border-border print:border-gray-300">
          <h3 class="text-lg font-bold text-foreground mb-1 print:text-black">{SITE_NAME} (Personal Website)</h3>
          <p class="text-sm text-muted-foreground italic mb-2 print:text-gray-600">Astro • React • TypeScript</p>
          <p class="text-foreground print:text-black">Personal portfolio and knowledge sharing platform built with Astro.</p>
        </article>

        <article class="mb-6 pl-4 border-l-2 border-border print:border-gray-300">
          <h3 class="text-lg font-bold text-foreground mb-1 print:text-black">Project Name 2</h3>
          <p class="text-sm text-muted-foreground italic mb-2 print:text-gray-600">Technology Stack</p>
          <p class="text-foreground print:text-black">Project description and key achievements.</p>
        </article>
      </section>

      <!-- Certifications -->
      <section class="flex flex-col">
        <h2 class="text-xl font-bold text-primary border-b-2 border-border pb-2 mb-6 print:text-black print:border-black">Certifications</h2>
        
        <ul class="list-disc list-inside pl-4 text-foreground print:text-black space-y-2">
          <li>Certification Name - Issuing Organization (Year)</li>
          <li>Another Certification - Issuing Organization (Year)</li>
        </ul>
      </section>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mt-12 pt-8 border-t border-border print:hidden">
      <button onclick="window.print()" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:bg-primary-hover text-white rounded-lg font-medium transition-colors">
        <Printer size={18} /> Print / Save as PDF
      </button>
      <a href="/about" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent border-2 border-primary text-primary hover:bg-primary hover:text-white rounded-lg font-medium transition-colors">
        <ArrowLeft size={18} /> Back to About
      </a>
    </div>
  </main>
</BaseLayout>
