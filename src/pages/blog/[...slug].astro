---
import { getCollection, type CollectionEntry } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import { formatDate } from '../../utils/date';

type BlogEntry = CollectionEntry<'blog'>;

interface Props {
  entry: BlogEntry;
}

// ç”Ÿæˆæ‰€æœ‰åšå®¢æ–‡ç« çš„é™æ€è·¯ç”±
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }: { data: Record<string, any> }) => !data.draft);

  return blogEntries.map((entry: BlogEntry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, pubDate, tags, image } = entry.data;
---

<BlogLayout title={title} description={description} image={image}>
  <article class="blog-article">
    <header class="article-header">
      <h1>{title}</h1>
      
      <div class="article-meta">
        <div class="meta-info">
          <time datetime={pubDate.toISOString()}>
            ğŸ“… {formatDate(pubDate)}
          </time>
          <span class="reading-time">â±ï¸ é˜…è¯»æ—¶é—´ï¼š5 åˆ†é’Ÿ</span>
        </div>

        {tags && tags.length > 0 && (
          <div class="article-tags">
            {tags.map((tag: string) => (
              <a href={`/blog?tag=${tag}`} class="tag">
                #{tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </header>

    {image && (
      <img src={image} alt={title} class="article-image" />
    )}

    <div class="article-content">
      <Content />
    </div>

    <footer class="article-footer">
      <div class="article-nav">
        <a href="/blog" class="back-link">â† è¿”å›åšå®¢</a>
      </div>
    </footer>
  </article>
</BlogLayout>

<style>
  .blog-article {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }

  .article-header {
    margin-bottom: var(--spacing-2xl);
    border-bottom: 2px solid var(--color-border);
    padding-bottom: var(--spacing-lg);
  }

  .article-header h1 {
    margin: 0 0 var(--spacing-lg) 0;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .article-meta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    color: var(--color-text-secondary);
  }

  .meta-info {
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
    font-size: 0.95rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tag {
    background: rgba(0, 102, 204, 0.1);
    color: var(--color-primary);
    padding: 4px 12px;
    border-radius: var(--border-radius-sm);
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag:hover {
    background: rgba(0, 102, 204, 0.2);
  }

  .article-image {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: var(--border-radius-md);
    margin-bottom: var(--spacing-2xl);
  }

  .article-content {
    font-size: 1.05rem;
    line-height: 1.8;
  }

  /* æ–‡ç« å†…å®¹æ ·å¼ */
  :global(.article-content h2) {
    font-size: 1.8rem;
    margin: var(--spacing-2xl) 0 var(--spacing-md) 0;
  }

  :global(.article-content h3) {
    font-size: 1.4rem;
    margin: var(--spacing-lg) 0 var(--spacing-md) 0;
  }

  :global(.article-content p) {
    margin-bottom: var(--spacing-md);
  }

  :global(.article-content ul),
  :global(.article-content ol) {
    margin-bottom: var(--spacing-md);
  }

  :global(.article-content li) {
    margin-bottom: var(--spacing-sm);
  }

  :global(.article-content blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  :global(.article-content code) {
    background: rgba(0, 0, 0, 0.05);
    padding: 2px 6px;
    border-radius: 3px;
    font-family: var(--font-family-mono);
  }

  :global(.article-content pre) {
    background: rgba(0, 0, 0, 0.05);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-lg);
  }

  :global(.article-content pre code) {
    background: none;
    padding: 0;
  }

  .article-footer {
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .article-nav {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .back-link {
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 1.8rem;
    }

    .article-content {
      font-size: 1rem;
    }

    :global(.article-content h2) {
      font-size: 1.4rem;
    }

    :global(.article-content h3) {
      font-size: 1.1rem;
    }
  }
</style>
